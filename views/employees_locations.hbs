{{!-- Create Employees Locations Table --}}
<table id="employees_locations-table">
    {{!-- Header Section --}}
    <thead>
        <tr>
            <th>Delete</th>
            <th>Employee</th>
            <th>Location</th>
        </tr>
    </thead>

    {{!-- Body Section --}}
    <tbody>
        {{#each data}}
        <tr data-value={{this.elid}}>
            <td><button onclick="deleteEmployeesLocations({{this.elid}})">Delete</button></td>
            <td>{{this.employee_nametag}}</td>
            <td>{{this.address_line}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_employees_locations.js"></script>
<link rel="stylesheet" href="./css/style.css">



{{!-- Form to add a record to the table  --}}
<h2>Add Employee by Location Entry</h2>
<p>To add a new employee by location entry, select the options from the two drop down menus and click 'Submit'!</p>
<form id="add-employees-locations-form-ajax">
    <select name="input-employee" id="input-employee">
        <option value="">Select an Employee</option>
        {{#each employees}}
        <option value="{{this.employee_id}}">{{this.employee_nametag}}</option>
        {{/each}}
    </select> 

    <select name="input-location" id="input-location">
        <option value="">Select a Location</option>
        {{#each locations}}
        <option value="{{this.location_id}}">{{this.address_line}}</option>
        {{/each}}
    </select>

    <input type="submit">
</form>
<script src="./js/add_employees_locations.js"></script>
